    "label": "Fade LED",
    "code": [
      "@Loop",
      "  For i=0 to 100 Step 10",
      "    AWrite('L', i)",
      "    Wait(100)",
      "  Next",
      "  For i=100 to 0 Step -10",
      "    AWrite('L', i)",
      "    Wait(100)",
      "  Next",
      "Goto Loop"
    ]
